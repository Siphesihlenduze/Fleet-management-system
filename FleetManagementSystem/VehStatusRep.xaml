<Window x:Class="FleetManagementSystem.VehStatusRep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FleetManagementSystem"
        mc:Ignorable="d"
        Title="VehStatusRep" Height="450" Width="800">
    <Grid>
        <Image Source="FleetBackground1.jpg" Stretch="Fill"/>

        <Label Content="Vehicle status report" HorizontalAlignment="Left" Margin="249,10,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FF151D6E" FontFamily="Rockwell Extra Bold" Background="#FFDCDADA" Opacity="0.72"/>
        <DataGrid x:Name="vehStatusGrid" HorizontalAlignment="Left" Height="306" Margin="10,103,0,0" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="GenerateBtn" Content="Generate report" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Width="292" Height="45" Background="#FF33909B" FontSize="18" FontFamily="Lucida Fax" Click="GenerateBtn_Click"/>
        <Button Content="Go back to reports menu" HorizontalAlignment="Left" Margin="508,52,0,0" VerticalAlignment="Top" Width="274" Height="45" Background="#FF33909B" FontFamily="Lucida Fax" FontSize="18"/>

    </Grid>
</Window>
